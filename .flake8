[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache

per-file-ignores =
    # テストファイルでは一部のチェックを緩める
    *test*.py: F401, F811
    # 設定ファイルでは長い行を許可
    *config*.py: E501

# セキュリティ関連のチェック
select = E,W,F,C,N
# F401: imported but unused
# F811: redefinition of unused name
# E501: line too long